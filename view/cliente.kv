<ClienteScreen>:
    name: "cliente"
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: dp(48)
            spacing: 10
            MDTextField:
                id: iptNomeCliente
                hint_text: "Nome"
            MDTextField:
                id: iptSobrenomeCliente
                hint_text: "Sobrenome"
            MDRaisedButton:
                text: "Salvar"
                opposite_colors: True
                on_press: root.save()

