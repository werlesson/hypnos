<FuncionarioScreen>:
    name: "funcionario"
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: dp(48)
            spacing: 10
            MDTextField:
                id: iptNomeFuncionario
                hint_text: "Nome"
            MDTextField:
                id: iptSobrenomeFuncionario
                hint_text: "Sobrenome"
            MDTextField:
                id: iptCargoFuncionario
                hint_text: "Cargo"
            MDRaisedButton:
                text: "Salvar"
                opposite_colors: True
                on_press: root.save()
