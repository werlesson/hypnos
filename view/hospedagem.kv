                            text: "Isaac Henrique Cardoso"
                            text: "Check-In: 28/09/2013"
                            text: "Check-Out: 30/09/2013"
                        OneLineListItem:
                            text: "Thales Francisco Igor Cardoso"
                            text: "Check-In: 30/07/2014"
                            text: "Check-Out: 31/07/2014"
                        OneLineListItem:
                            text: "Cauã e Isabelle Locações de Automóveis Ltda"
                            text: "Check-In: 30/07/2014"
                            text: "Check-Out: 31/07/2014"
                        OneLineListItem:
                            text: "Ian e Yuri Comercio de Bebidas ME"
                            text: "Check-In: 30/07/2014"
                            text: "Check-Out: 31/07/2014"
