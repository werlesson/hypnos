<HospedagemScreen>:
    name: "hospedagem"

    MDBottomNavigation:
        id: view_hospedagem

        MDBottomNavigationItem:
            name: 'search_hospedagem'
            text: "Lista de hospedagem"
            icon: 'account'
            id: search_hospedagem
            BoxLayout:
                orientation: 'vertical'
                padding: dp(10), dp(10)
                spacing: dp(10)
                MDTextField:
                    hint_text: "Digite sua busca..."
                ScrollView:
                    do_scroll_x: False
                    MDList:
                        id: ml

                        OneLineListItem:
                            text: "Bruno Ricardo Lucas Oliveira"
                            text: "Check-In: 10/04/2012"
                            text: "Check-Out: 12/04/2012"
