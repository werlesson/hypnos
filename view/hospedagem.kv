                    MDTextField:
                        id: iptValorProdutosHospedagem
                        hint_text: "Valor Produtos"
                    MDTextField:
                        id: iptDescontoHospedagem
                        hint_text: "Desconto"
                    MDTextField:
                        id: iptValorTotalHospedagem
                        hint_text: "Valor Total"
                    MDRaisedButton:
                        text: "Salvar"
                        opposite_colors: True
