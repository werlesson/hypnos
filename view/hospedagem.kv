                            text: "Alícia e Gustavo Pizzaria ME"
                            text: "Check-In: 30/07/2014"
                            text: "Check-Out: 31/07/2014"

        MDBottomNavigationItem:
            name: 'cadastro_hospedagem'
            text: "Cadastro"
            icon: "plus"
            id: cadastro_hospedagem
            ScrollView:
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(48)
                    spacing: 10
                    MDTextField:
                        id: iptCheckInHospedagem
                        hint_text: "Check-In"
                    MDTextField:
                        id: iptCheckOutHospedagem
                        hint_text: "Check-Out"
                    MDTextField:
                        id: iptValorDaDiariaHospedagem
                        hint_text: "Valor Diaria"
                    MDTextField:
                        id: iptDiariasHospedagem
                        hint_text: "Diarias"
                    MDTextField:
